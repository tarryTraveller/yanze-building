<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="db">
        <plugin type="com.yanze.building.generator.plugin.MybatisGeneratorPlugin"/>
		<!-- 防止生成的代码中有很多注释，加入下面的配置控制 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
            <property name="suppressDate" value="true" />
        </commentGenerator>
        <jdbcConnection connectionURL="jdbc:mysql://localhost:3306/yanze_building" driverClass="com.mysql.jdbc.Driver" password="yanze" userId="yanze"/>
        <javaModelGenerator targetPackage="com.yanze.building.dao.model" targetProject="src/main/java"/>
        <sqlMapGenerator targetPackage="mybatis.sqlmap" targetProject="src/main/resources"/>
        <javaClientGenerator targetPackage="com.yanze.building.dao.mapper" targetProject="src/main/java" type="XMLMAPPER"/>

		<!-- 系统表 -->
		
		<!-- 用户表-->
        <table tableName="sys_user"/>
        <!-- 角色表-->
        <table tableName="sys_role"/>
        <!-- 用户角色表-->
        <table tableName="sys_user_role"/>
        <!-- 权限表-->
        <table tableName="sys_permission"/>
        <!-- 用户权限表-->
        <table tableName="sys_role_permission"/>
        
    </context>
</generatorConfiguration>
